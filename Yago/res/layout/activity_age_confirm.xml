<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
	<ImageView
        android:id="@+id/yoga_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/yago"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yoga_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yago" />

    <ImageView
        android:id="@+id/above_twenty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/above_twenty" />
    <ImageView
        android:id="@+id/inder_twenty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_above="@+id/above_twenty"
        android:layout_marginBottom="10dp"
        android:src="@drawable/under_twenty" />
</RelativeLayout>